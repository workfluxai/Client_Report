{
    "name": "Weekly Client Report - Jira",
    "nodes": [
      {
        "parameters": {"triggerTimes": {"item": [{"mode": "everyWeek","weeklyInterval":1,"hour":9,"weekday":"monday"}]}},
        "name": "Weekly Trigger",
        "type": "n8n-nodes-base.cron",
        "typeVersion": 2,
        "position": [250, 200]
      },
      {
        "parameters": {"jiraInstance": "={{$json.jiraInstance}}","project": "={{$json.projectId}}"},
        "name": "Fetch Jira Issues",
        "type": "n8n-nodes-base.jira",
        "typeVersion": 1,
        "position": [500, 200]
      },
      {
        "parameters": {"prompt":"Summarize Jira updates into: Progress This Week, Blockers, Next Week plan, Overall status.","model":"gpt-4"},
        "name": "AI Summarizer",
        "type": "n8n-nodes-base.openAi",
        "typeVersion": 1,
        "position": [750, 200]
      },
      {
        "parameters": {"options":{"format":"A4"},"content":"={{$json.summary}}"},
        "name": "Generate PDF",
        "type": "n8n-nodes-base.htmlPdf",
        "typeVersion": 1,
        "position": [950, 200]
      },
      {
        "parameters": {"fromEmail":"reports@workfluxai.com","toEmail":"={{$json.userEmail}}","subject":"Weekly Client Report","attachments":"data:application/pdf;base64,{{$json.pdfFile}}"},
        "name": "Send Report Email",
        "type": "n8n-nodes-base.emailSend",
        "typeVersion": 2,
        "position": [1150, 200]
      }
    ],
    "connections": { "Weekly Trigger": {"main": [[{"node":"Fetch Jira Issues","type":"main","index":0}]]}, "Fetch Jira Issues": {"main": [[{"node":"AI Summarizer","type":"main","index":0}]]}, "AI Summarizer": {"main": [[{"node":"Generate PDF","type":"main","index":0}]]}, "Generate PDF": {"main": [[{"node":"Send Report Email","type":"main","index":0}]]]}}
  }